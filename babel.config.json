{
  "overrides": [
    {
      "include": [
        "source/**/*.cjs"
      ],
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": {
              "node": "current"
            }
          }
        ]
      ]
    },
    {
      "exclude": [
        "source/header",
        "source/test"
      ],
      "plugins": [
        [
          "babel-plugin-add-header-comment",
          {
            "header": [
              "!npx --no-install --package @virtualpatterns/mablung-makefile mablung-makefile get-header"
            ]
          }
        ]
      ]
    }
  ]
}
