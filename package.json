{
  "author": "virtualpatterns.com <code@virtualpatterns.com> (http://www.virtualpatterns.com)",
  "ava": {
    "failFast": true,
    "files": [
      "release/**/test/**/*.test.*"
    ],
    "nodeArguments": [
      "--no-warnings",
      "--unhandled-rejections=strict"
    ],
    "require": [],
    "verbose": true
  },
  "babel": {
    "overrides": [
      {
        "include": [
          "source/**/*.cjs"
        ],
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "current"
              }
            }
          ]
        ]
      },
      {
        "exclude": [
          "source/header/**/*"
        ],
        "plugins": [
          [
            "babel-plugin-add-header-comment",
            {
              "header": [
                "!node release/header/index.js"
              ]
            }
          ]
        ]
      }
    ]
  },
  "c8": {
    "all": true,
    "exclude": [
      "release/header"
    ],
    "reporter": [
      "html"
    ],
    "src": "release"
  },
  "description": "TBD",
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "requireConfigFile": false
    },
    "plugins": [
      "eslint-plugin-babel"
    ],
    "rules": {
      "arrow-parens": "error",
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-debugger": "warn",
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "no-console": "warn",
      "no-unused-vars": "warn",
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "exports": {
    ".": "./release/index.cjs",
    "./package.json": "./package.json"
  },
  "files": [
    "release/index.cjs"
  ],
  "license": "GPL-3.0+",
  "name": "@virtualpatterns/eslint-config-mablung-makefile",
  "repository": {
    "type": "git",
    "url": "https://github.com/virtualpatterns/eslint-config-mablung-makefile"
  },
  "type": "module",
  "version": "0.0.6-0",
  "devDependencies": {
    "@virtualpatterns/mablung-makefile": "0.0.17",
    "ava": "^3.15.0",
    "eslint": "^7.32.0"
  }
}
